[workspace]
members = [
    "shard",
    "functions",
    "functions/hello_world",
    "functions/math_ops",
    "tests",
]
resolver = "2"

[workspace.dependencies]
anchor-lang = "0.31.1"
solana-program = "2.1.6"
borsh = "1.5.7"
getrandom = { version = "0.2", features = ["custom"] }

[profile.release]
overflow-checks = true
lto = "fat"
codegen-units = 1
[profile.release.build-override]
opt-level = 3
incremental = false
codegen-units = 1