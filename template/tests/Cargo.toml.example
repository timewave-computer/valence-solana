[package]
name = "template-tests"
version = "0.1.0"
edition = "2021"

[dependencies]
# Import the shard and functions to test
template-shard = { path = "../shard" }
template-functions = { path = "../functions" }

# Testing dependencies
anchor-lang = { workspace = true }
solana-program = { workspace = true }
solana-sdk = "2.1.6"
solana-program-test = "2.1.6"
tokio = { version = "1", features = ["full"] }
borsh = { workspace = true }

[dev-dependencies]
# Additional test utilities
env_logger = "0.10"
hex = "0.4"

[[test]]
name = "shard_test"
path = "shard_test.rs"

[[test]]
name = "integration_test"
path = "integration_test.rs"
required-features = []